# LLM provider settings
OPENAI_API_KEY=your_api_key_here
ANTHROPIC_API_KEY=your_api_key_here
LLM_PROVIDER=openai
LLM_MODEL=gpt-4.1-mini
# Optional comma-separated fallback models.
# Format: provider:model,provider:model (or model,model for same provider).
LLM_FALLBACK_MODELS=

# Loop safety settings
LOOP_MAX_STEPS=6
LOOP_MAX_TOOL_CALLS=4
LOOP_TIMEOUT_MS=30000
LOOP_MAX_MESSAGES=30
LOOP_MAX_REPEAT_DECISION_SIGNATURES=2
